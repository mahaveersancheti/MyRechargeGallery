<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:weightSum="100"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:text=""
            android:id="@+id/etConsumerNumber"
            android:hint="Consumer Number"
            android:layout_weight="80"
            android:layout_width="0dp"
            android:inputType="number"
            android:layout_height="wrap_content" />

        <Button
            android:layout_weight="20"
            android:background="@color/colorPrimary"
            android:textColor="#FFFFFF"
            android:id="@+id/btnGo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Go" />

    </LinearLayout>

    <TextView
        android:visibility="gone"
        android:textStyle="bold"
        android:textSize="18dp"
        android:text=""
        android:layout_marginTop="15dp"
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:weightSum="100"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="40"
                android:textSize="18dp"
                android:text="Con. No. : "
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:id="@+id/tvConsumerNo"
                android:layout_weight="60"
                android:textSize="18dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="6dp"
            android:weightSum="100"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="40"
                android:textSize="18dp"
                android:text="Name : "
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvConsumerName"
                android:layout_weight="60"
                android:textSize="18dp"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="6dp"
            android:weightSum="100"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="40"
                android:textSize="18dp"
                android:text="Bulling Unit : "
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvBillingUnit"
                android:layout_weight="60"
                android:textSize="18dp"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="6dp"
            android:weightSum="100"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="40"
                android:textSize="18dp"
                android:text="P. Cycle : "
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvProcessingCycle"
                android:layout_weight="60"
                android:textSize="18dp"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="6dp"
            android:weightSum="100"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="40"
                android:textSize="18dp"
                android:text="Due Date : "
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvBillingDue"
                android:layout_weight="60"
                android:textSize="18dp"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="6dp"
            android:weightSum="100"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="40"
                android:textSize="18dp"
                android:text="Billing Amt. : "
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvBillingAmt"
                android:layout_weight="60"
                android:textSize="18dp"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="6dp"
            android:weightSum="100"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="40"
                android:textSize="18dp"
                android:text="Payable Amt. : "
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvPayableAmt"
                android:layout_weight="60"
                android:textSize="18dp"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <Spinner
            android:background="@drawable/btn_back"
            android:spinnerMode="dialog"
            android:id="@+id/spOperator"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></Spinner>

        <Button
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:background="@color/colorPrimary"
            android:textColor="#FFFFFF"
            android:id="@+id/btnPay"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Pay" />
    </LinearLayout>

</LinearLayout>