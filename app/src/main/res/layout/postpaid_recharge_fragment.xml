<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:visibility="gone"
        android:id="@+id/tvMessage1"
        android:gravity="center"
        android:textSize="18dp"
        android:layout_marginBottom="15dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="Wrong recharge will not be refunded in any case."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:id="@+id/ll"
        android:layout_alignParentTop="true"
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:background="@drawable/btn_back"
            android:spinnerMode="dialog"
            android:layout_marginTop="20dp"
            android:id="@+id/spOperator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:visibility="gone"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#FF0000"
            android:layout_marginTop="10dp"
            android:id="@+id/tvError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:textStyle="bold"
            android:textSize="24dp"
            android:padding="10dp"
            android:background="@drawable/btn_back"
            android:layout_marginTop="10dp"
            android:hint="Postpaid Number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/etPhone" />

<!--        <com.google.android.material.textfield.TextInputEditText-->
<!--            android:layout_marginTop="10dp"-->
<!--            android:layout_width="match_parent"-->
<!--            android:textColorHint="@color/colorPrimary"-->
<!--            android:layout_height="wrap_content">-->

<!--            -->
<!--        </com.google.android.material.textfield.TextInputEditText>-->

        <EditText
            android:padding="10dp"
            android:background="@drawable/btn_back"
            android:layout_marginTop="10dp"
            android:hint="Bill Amount"
            android:id="@+id/etAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number" />

<!--        <com.google.android.material.textfield.TextInputEditText-->
<!--            android:layout_marginTop="10dp"-->
<!--            android:layout_width="match_parent"-->
<!--            android:textColorHint="@color/colorPrimary"-->
<!--            android:layout_height="wrap_content">-->

<!--            -->
<!--        </com.google.android.material.textfield.TextInputEditText>-->

        <Button
            android:background="@color/colorPrimary"
            android:textColor="#FFFFFF"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:id="@+id/btnRecharge"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text=" Pay " />

        <TextView
            android:layout_marginTop="10dp"
            android:padding="0dp"
            android:textColor="#FF0000"
            android:id="@+id/tvMessage"
            android:gravity="center"
            android:textSize="20dp"
            android:text="Wrong recharge will not be refunded in any case."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_marginTop="4dp"
            android:background="#D3D3D3"
            android:layout_width = "match_parent"
            android:layout_height="1dp"/>

    </LinearLayout>

    <ScrollView
        android:background="#e2dede"
        android:layout_below="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="16dp"
            android:id="@+id/llCustomerCare"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:padding="4dp"
                android:weightSum="100"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="50"
                    android:textSize="18dp"
                    android:layout_gravity="center"
                    android:text="Idea"
                    android:textStyle="bold"
                    android:textColor="@color/textColor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_weight="50"
                    android:textSize="18dp"
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:text="198"
                    android:textStyle="bold"
                    android:textColor="@color/textColor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="0dp"
                android:padding="4dp"
                android:weightSum="100"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="50"
                    android:textSize="18dp"
                    android:layout_gravity="center"
                    android:text="Vodafone"
                    android:textStyle="bold"
                    android:textColor="@color/textColor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_weight="50"
                    android:textSize="18dp"
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:text="198"
                    android:textStyle="bold"
                    android:textColor="@color/textColor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="0dp"
                android:padding="4dp"
                android:weightSum="100"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="50"
                    android:textSize="18dp"
                    android:layout_gravity="center"
                    android:text="Airtel"
                    android:textStyle="bold"
                    android:textColor="@color/textColor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_weight="50"
                    android:textSize="18dp"
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:text="198 OR 121"
                    android:textStyle="bold"
                    android:textColor="@color/textColor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="0dp"
                android:padding="4dp"
                android:weightSum="100"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="50"
                    android:textSize="18dp"
                    android:layout_gravity="center"
                    android:text="Docomo"
                    android:textStyle="bold"
                    android:textColor="@color/textColor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_weight="50"
                    android:textSize="18dp"
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:text="198"
                    android:textStyle="bold"
                    android:textColor="@color/textColor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="0dp"
                android:padding="4dp"
                android:weightSum="100"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="50"
                    android:textSize="18dp"
                    android:layout_gravity="center"
                    android:text="BSNL"
                    android:textStyle="bold"
                    android:textColor="@color/textColor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_weight="50"
                    android:textSize="18dp"
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:text="1501 OR 1503"
                    android:textStyle="bold"
                    android:textColor="@color/textColor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="0dp"
                android:padding="4dp"
                android:weightSum="100"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="50"
                    android:textSize="18dp"
                    android:layout_gravity="center"
                    android:text="JIO"
                    android:textStyle="bold"
                    android:textColor="@color/textColor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_weight="50"
                    android:textSize="18dp"
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:text="198 OR 18608933333"
                    android:textStyle="bold"
                    android:textColor="@color/textColor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</RelativeLayout>