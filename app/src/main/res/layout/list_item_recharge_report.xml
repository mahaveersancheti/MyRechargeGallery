    <LinearLayout
        android:layout_marginTop="8dp"
        android:weightSum="100"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_weight="75"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:fontFamily="@font/work_sans"
                    android:textColor="#999999"
                    android:maxLines="1"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Operator : " />

                <TextView
                    android:id="@+id/tvLIOperator"
                    android:textColor="@color/textColor"
                    android:fontFamily="@font/work_sans_medium"
                    android:maxLines="1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />
            </LinearLayout>

            <View
                android:layout_weight="1"
                android:background="#D3D3D3"
                android:layout_width = "match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvLINumberLabel"
                    android:fontFamily="@font/work_sans"
                    android:textColor="#999999"
                    android:maxLines="1"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Number : " />

                <TextView
                    android:id="@+id/tvLINumber"
                    android:textColor="@color/textColor"
                    android:fontFamily="@font/work_sans_medium"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />
            </LinearLayout>

            <View
                android:layout_weight="1"
                android:background="#D3D3D3"
                android:layout_width = "match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:fontFamily="@font/work_sans"
                    android:textColor="#999999"
                    android:maxLines="1"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amount : " />

                <TextView
                    android:id="@+id/tvLIAmount"
                    android:gravity="center"
                    android:textColor="#2ac1e7"
                    android:fontFamily="@font/work_sans_medium"
                    android:maxLines="1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />
            </LinearLayout>

            <View
                android:layout_weight="1"
                android:background="#D3D3D3"
                android:layout_width = "match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvLITrasactionIdLabel"
                    android:fontFamily="@font/work_sans"
                    android:textColor="#999999"
                    android:maxLines="1"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trans. Id : " />

                <TextView
                    android:id="@+id/tvLITrasactionId"
                    android:textColor="@color/textColor"
                    android:fontFamily="@font/work_sans_medium"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />
            </LinearLayout>

            <View
                android:layout_weight="1"
                android:background="#D3D3D3"
                android:layout_width = "match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:fontFamily="@font/work_sans"
                    android:textColor="#999999"
                    android:maxLines="1"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time : " />

                <TextView
                    android:id="@+id/tvLITimestamp"
                    android:textColor="@color/textColor"
                    android:fontFamily="@font/work_sans_medium"
                    android:maxLines="2"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />
            </LinearLayout>

            <View
                android:layout_weight="1"
                android:background="#D3D3D3"
                android:layout_width = "match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:fontFamily="@font/work_sans"
                    android:textColor="#999999"
                    android:maxLines="1"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cashback Commi. : " />

                <TextView
                    android:id="@+id/tvLICommission"
                    android:textColor="@color/textColor"
                    android:fontFamily="@font/work_sans_medium"
                    android:maxLines="1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />
            </LinearLayout>

            <View
                android:layout_weight="1"
                android:background="#D3D3D3"
                android:layout_width = "match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:id="@+id/tvLIStatus"
                android:gravity="center"
                android:background="@color/colorPrimary"
                android:textColor="@color/textColor"
                android:fontFamily="@font/work_sans_medium"
                android:maxLines="1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" />

        </LinearLayout>

        <View
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="#D3D3D3"
            android:layout_width = "0dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:weightSum="100"
            android:layout_weight="25"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_weight="33"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical">

                <TextView
                    android:fontFamily="@font/work_sans"
                    android:textColor="#999999"
                    android:maxLines="1"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="After Bal." />

                <TextView
                    android:id="@+id/tvLIDeductAmt"
                    android:gravity="center"
                    android:textColor="@color/textColor"
                    android:fontFamily="@font/work_sans_medium"
                    android:maxLines="1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="33"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical">

                <TextView
                    android:fontFamily="@font/work_sans"
                    android:textColor="#999999"
                    android:maxLines="1"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Debit Amt." />

                <TextView
                    android:id="@+id/tvLIBalance"
                    android:gravity="center"
                    android:textColor="@color/textColor"
                    android:fontFamily="@font/work_sans_medium"
                    android:maxLines="1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="33"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivShare"
                    android:tint="#121580"
                    android:layout_gravity="center"
                    android:src="@drawable/share"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
            </LinearLayout>

            <View
                android:layout_weight="1"
                android:background="#D3D3D3"
                android:layout_width = "match_parent"
                android:layout_height="1dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
</androidx.cardview.widget.CardView>