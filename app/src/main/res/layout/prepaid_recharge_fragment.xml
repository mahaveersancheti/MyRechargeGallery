<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="16dp"
            android:layout_alignParentTop="true"
            android:id="@+id/ll"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:background="@drawable/btn_back"
                android:spinnerMode="dialog"
                android:layout_marginTop="0dp"
                android:id="@+id/spOperator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:visibility="gone"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#FF0000"
                android:layout_marginTop="0dp"
                android:id="@+id/tvError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Spinner
                android:background="@drawable/btn_back"
                android:spinnerMode="dialog"
                android:layout_marginTop="20dp"
                android:id="@+id/spCircle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:padding="10dp"
                android:background="@drawable/btn_back"
                android:textStyle="bold"
                android:textSize="24dp"
                android:layout_marginTop="20dp"
                android:hint="Mobile Number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/etPhone" />

            <!--        <com.google.android.material.textfield.TextInputEditText-->
            <!--            android:layout_marginTop="10dp"-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:textColorHint="@color/colorPrimary"-->
            <!--            android:layout_height="wrap_content">-->

            <!--            -->
            <!--        </com.google.android.material.textfield.TextInputEditText>-->

            <LinearLayout
                android:layout_marginTop="20dp"
                android:weightSum="100"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_marginRight="10dp"
                    android:padding="5dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_weight="50"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:id="@+id/btnCheckOffer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Check\nPlans" />

                <Button
                    android:padding="5dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="50"
                    android:background="#f4ad42"
                    android:textColor="@color/textColor"
                    android:layout_gravity="center"
                    android:id="@+id/btnCheckROffer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Check\nOffers" />

            </LinearLayout>

            <EditText
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:background="@drawable/btn_back"
                android:hint="Recharge Amount"
                android:id="@+id/etAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />

            <!--        <com.google.android.material.textfield.TextInputEditText-->
            <!--            android:layout_marginTop="10dp"-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:textColorHint="@color/colorPrimary"-->
            <!--            android:layout_height="wrap_content">-->

            <!--            -->
            <!--        </com.google.android.material.textfield.TextInputEditText>-->

            <LinearLayout
                android:layout_marginTop="20dp"
                android:weightSum="100"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--            <Button-->
                <!--                android:layout_weight="50"-->
                <!--                android:background="#f4ad42"-->
                <!--                android:textColor="@color/textColor"-->
                <!--                android:layout_gravity="center"-->
                <!--                android:id="@+id/btnCheckOffer"-->
                <!--                android:layout_width="0dp"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:text="Check Offer" />-->

                <Button
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="100"
                    android:background="@color/colorPrimary"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center"
                    android:id="@+id/btnRecharge"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Rechrage" />

            </LinearLayout>

            <TextView
                android:layout_marginTop="10dp"
                android:padding="0dp"
                android:textColor="#FF0000"
                android:id="@+id/tvMessage"
                android:gravity="center"
                android:textSize="20dp"
                android:text="Wrong recharge will not be refunded in any case."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_marginTop="4dp"
                android:background="#D3D3D3"
                android:layout_width = "match_parent"
                android:layout_height="1dp"/>

        </LinearLayout>
    </ScrollView>


    <ScrollView
        android:visibility="gone"
        android:background="#e2dede"
        android:layout_below="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

